{
    "include": ["./src/**/*"],
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "lib": ["dom", "es2017"],
      // "allowJs": true,
      // "checkJs": true,
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmit": true,
      "skipLibCheck": true,
      "noImplicitThis": false,
      "noUnusedLocals": false
    }
  }